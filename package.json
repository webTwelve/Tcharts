{
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "npx vue-demi-switch 3 && cd packages/example && npm run dev",
    "build": "pnpm build3 && pnpm build2",
    "build3": "npx vue-demi-switch 3 && vite build",
    "build2": "npx vue-demi-switch 2 && cd packages/xy-design-v2 && vite build",
    "build:demo": "cd packages/example && npm run build",
    "postinstall": "husky install && cd packages/xy-design-v2 && npm i",
    "publish": "cd packages/xy-design && npm publish",
    "lint": "vue-tsc --noEmit --skipLibCheck && eslint --ext .js,.vue,.ts, --ignore-path .gitignore . --fix"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint --edit $1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue,scss}": "prettier --write",
    "*.{ts,tsx,js,vue}": "npm run lint"
  },
  "dependencies": {
    "@vueuse/core": "^9.5.0",
    "@xy-design/charts": "workspace:^0.0.1",
    "@xy-design/components": "workspace:^0.0.1",
    "@xy-design/utils": "workspace:^0.0.1",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.6",
    "echarts": "^5.4.0",
    "lodash": "^4.17.21",
    "vue": "^3.2.0",
    "vue-demi": "^0.13.11"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/lodash": "^4.14.188",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/compiler-sfc": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "eslint": "^8.27.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.7.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sass": "^1.56.1",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vite-plugin-dts": "^1.7.0",
    "vue-tsc": "^1.0.9"
  }
}
